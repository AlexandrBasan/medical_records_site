<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= stylesheet_link_tag "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= render 'static_pages/mobile/shim' %>
    <%= favicon_link_tag 'teleport_16_16_0.png' %>
    <!--Google Analytics-->
    <script type="text/javascript">
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-39163702-1']);
        _gaq.push(['_setDomainName', 'teleport-ds.com']);
        _gaq.push(['_setAllowLinker', true]);
        _gaq.push(['_trackPageview']);

        (function() {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://' : 'http://') + 'stats.g.doubleclick.net/dc.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
    </script>
    <!--Google Analytics-->
  </head>
  <body>
  <p>
    <% if mobile_device? %>
      <div class="container">
        <div class="row">
          <div class="col-md-12 text-center">
        <%= link_to (I18n.t 'full_site'), {:mobile => 0}, class: "btn btn-lg btn-primary" %>
      </div>
        </div>
      </div>
  <% else %>
      <div class="container">
        <div class="row">
          <div class="col-md-12 text-center">
        <%= link_to (I18n.t 'mobile_site'), {:mobile => 1}, class: "btn btn-lg btn-primary" %>
      </div>
        </div>
      </div>
  <% end %>
  </p>
    <%= render 'static_pages/mobile/header' %>
  <%= content = yield %>
  <!--Back To Top Button-->
  <% if content.length > 1200 %>
      <%= link_to("#top") do %>
          <div id="backtotop" style="display: block;">
          </div>
      <% end %>
  <% end %>
      <div class="container">
      <%= render 'static_pages/mobile/footer' %>
      <%= debug(params) if Rails.env.development? %>
      </div>
  <!-- Код тега ремаркетинга Google -->
