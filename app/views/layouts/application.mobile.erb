    <div style="display:inline;">
      <img height="1" width="1" style="border-style:none;" alt="" src="//googleads.g.doubleclick.net/pagead/viewthroughconversion/958212778/?value=0&amp;guid=ON&amp;script=0"/>
    </div>
  </noscript>
  <!-- Код тега ремаркетинга Google -->
  </body>
</html>