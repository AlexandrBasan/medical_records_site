<% provide(:title, 'All users') %>
<h3><p class="text-center"><%= (t 'user.all_users')%></p></h3>
<% if current_user.try(:admin?) %>
    <div class="container">
      <div class="row">
        <div class="col-md-12">

    <table class="table table-bordered">
      <thead>
      <tr>
        <th><%= (t 'user.name') %></th>
        <th><%= (t 'user.e-mail') %></th>
        <th><%= (t 'user.created_at') %></th>
        <th><%= (t 'user.role') %></th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <%= will_paginate %>

      <tbody>
      <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.created_at %></td>
            <td>
              <% if user.admin? %>
                  <%= "Adminisrator" %>
              <% else %>
                  <%= "-" %>
              <% end %></td>
            <td><%= link_to (I18n.t 'button.show'), user, class: "btn btn-sm btn-primary" %></td>
            <td><%= link_to (I18n.t 'button.edit'), edit_user_path(user), class: "btn btn-sm btn-warning" %></td>
            <td><%= link_to (I18n.t 'button.delete'), user, method: :delete,
                            data: {confirm: 'Are you sure?'}, class: "btn btn-sm btn-danger" %></td>
          </tr>
      <% end %>

      </tbody>
    </table>
        </div>
      </div>
    </div>
<% else %>
<% end %>

<%= will_paginate %>
